{
  "name": "chesspoint-auth-backend",
  "version": "1.0.0",
  "description": "Secure authentication backend for Chesspoint.io",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npx tsx watch src/server.ts",
    "dev:node": "node --import tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "seed": "npx tsx src/scripts/seed.ts",
    "seed:puzzles": "npx tsx src/scripts/seedPuzzles.ts",
    "test:puzzles": "npx tsx src/scripts/testPuzzles.ts",
    "sync-indexes": "npx tsx src/scripts/syncIndexes.ts",
    "setup-db": "npx tsx src/scripts/setupDatabase.ts"
  },
  "keywords": [
    "auth",
    "jwt",
    "mongodb",
    "express"
  ],
  "author": "Chesspoint",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.21",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
